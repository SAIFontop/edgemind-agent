# Example EdgeMind Agent Configuration

# Gemini API Configuration
# Set your Gemini API key here or use the GEMINI_API_KEY environment variable
GEMINI_API_KEY=your_api_key_here

# Security Settings
STRICT_MODE=true
DRY_RUN=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/edgemind-agent.log

# Context Collection
DEFAULT_LOG_SOURCES=/var/log/syslog,/var/log/messages
DEFAULT_SERVICES=ssh,networking,cron,rsyslog
MAX_LOG_LINES=100

# Execution
COMMAND_TIMEOUT=30
REQUIRE_APPROVAL=true
